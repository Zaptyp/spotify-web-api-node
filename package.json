{
  "name": "@zaptyp/spotify-web-api-node",
  "version": "5.1.2",
  "homepage": "https://github.com/Zaptyp/spotify-web-api-node",
  "description": "A Node.js wrapper for Spotify's Web API",
  "main": "./src/server.js",
  "author": "Zaptyp",
  "license": "MIT",
  "types": "types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zaptyp/spotify-web-api-node.git"
  },
  "scripts": {
    "test": "jest",
    "travis": "npm test -- --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "precommit": "lint-staged",
    "prettier": "prettier . --write"
  },
  "jest": {
    "verbose": true,
    "setupFiles": [
      "./setupJest.js"
    ],
    "testEnvironmentOptions": {
      "url": "http://localhost/"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "dependencies": {
    "@types/spotify-api": "^0.0.25"
  },
  "devDependencies": {
    "coveralls": "^3.1.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "jest-resolve": "^29.7.0",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3"
  },
  "keywords": [
    "spotify",
    "echonest",
    "music",
    "api",
    "wrapper",
    "client",
    "web api"
  ],
  "browser": {
    "./src/server.js": "./src/client.js"
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  }
}
